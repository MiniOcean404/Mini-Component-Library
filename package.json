{
	"name": "engineering-component-library",
	"version": "1.0.0",
	"description": "Vue3工程化组件库的创建",
	"author": "miniOcean404",
	"license": "MIT",
	"private": true,
	"main": "packages/mini-ocean/entry.js",
	"module": "dist/element3-ui.esm-bundler.js",
	"unpkg": "dist/element3-ui.global.js",
	"jsdelivr": "dist/element3-ui.global.js",
	"types": "types/index.d.ts",
	"scripts": {
		"clean:lib": "rimraf lib && rimraf es && rimraf dist",
		"build:lib": "rollup -c ./build/rollup.config.ts",
		"build:theme": "cd packages/theme-chalk && yarn clean && yarn build",
		"dev": "cross-env NODE_ENV=development rollup -wc",
		"create:components": "lerna create com -y",
		"test": "jest --runInBand",
		"cy": "cypress open-ct",
		"test:coverage": "jest --coverage",
		"publish": "./script/publish.sh",
		"codecov": "codecov",
		"gen": "bash ./scripts/gc.sh",
		"lint:fix": "eslint --fix ./packages --ext .vue,.js,.ts,.jsx,.tsx && prettier --write .",
		"format": "prettier --write  .",
		"style:fix": "prettier --write \"**/*.css\" \"**/*.scss\" && stylelint \"packages/**/*.{css,scss,vue}\" --fix --config ./.stylelintrc.js",
		"prepare": "husky install"
	},
	"gitHooks": {
		"hooks": {
			"commit-msg": "node script/verify-commit.ts",
			"pre-commit": "yarn lint-staged",
			"pre-push": "yarn test"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,vue}": [
			"yarn lint:fix",
			"yarn style:fix",
			"git add ."
		],
		"*.{css,scss,vue}": [
			"yarn style:fix"
		],
		"*.{json,yaml,yml,md,html}": "prettier --write"
	},
	"workspaces": [
		"packages/*"
	],
	"dependencies": {
		"vue": "^3.2.0"
	},
	"peerDependencies": {},
	"devDependencies": {
		"@babel/core": "^7.15.0",
		"@babel/plugin-proposal-optional-chaining": "^7.14.5",
		"@babel/preset-env": "^7.15.0",
		"@babel/preset-typescript": "^7.15.0",
		"@rollup/plugin-babel": "^5.3.0",
		"@rollup/plugin-commonjs": "^20.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.0.4",
		"@rollup/plugin-replace": "^3.0.0",
		"@types/gulp": "^4.0.9",
		"@types/gulp-autoprefixer": "^0.0.33",
		"@types/gulp-clean-css": "^4.3.0",
		"@types/gulp-rename": "^2.0.1",
		"@types/gulp-sass": "^5.0.0",
		"@types/sass": "^1.16.1",
		"@vue/babel-plugin-jsx": "^1.0.6",
		"@vue/compiler-sfc": "3.0.2",
		"@vue/eslint-config-prettier": "^6.0.0",
		"@vue/test-utils": "^2.0.0-rc.13",
		"babel": "^6.23.0",
		"babel-eslint": "^10.1.0",
		"babel-jest": "^27.1.0",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-syntax-jsx": "^6.18.0",
		"babel-preset-env": "^1.7.0",
		"chalk": "^4.1.2",
		"codecov": "^3.8.3",
		"cp-cli": "^2.0.0",
		"eslint": "^7.32.0",
		"eslint-formatter-pretty": "^4.1.0",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-vue": "^7.17.0",
		"esno": "^0.9.1",
		"gulp": "^4.0.2",
		"gulp-autoprefixer": "^8.0.0",
		"gulp-clean-css": "^4.3.0",
		"gulp-cssmin": "^0.2.0",
		"gulp-rename": "^2.0.0",
		"gulp-sass": "^5.0.0",
		"gulp-typescript": "^6.0.0-alpha.1",
		"husky": "^7.0.2",
		"jest": "^27.1.0",
		"lerna": "^4.0.0",
		"lint-staged": "^11.1.2",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"rollup": "^2.56.3",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-scss": "^3.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript": "^1.0.1",
		"rollup-plugin-typescript2": "^0.30.0",
		"rollup-plugin-vue": "^6.0.0",
		"rollup-pluginutils": "^2.8.2",
		"sass": "^1.39.0",
		"stylelint": "^13.13.1",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-config-standard-wxss": "^0.1.1",
		"stylelint-order": "^4.1.0",
		"ts-node": "^10.1.0",
		"tslib": "^2.3.1",
		"typescript": "^4.4.2",
		"vue-jest": "5.0.0-alpha.5"
	},
	"keywords": [
		"mini",
		"vue",
		"components",
		"ui",
		"vue3",
		"vue-next"
	],
	"browserslist": [
		"> 1%",
		"not ie 11",
		"not op_mini all"
	]
}
